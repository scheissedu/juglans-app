{
  "workspaces": {
    "enabled": true
  },
  "ignoreCommand": "if [ \"$VERCEL_ENV\" == \"production\" ]; then exit 1; else exit 0; fi",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm --filter \"@klinecharts/juglans-app^...\" build",
        "distDir": "packages/juglans-app/dist"
      }
    },
    {
      "src": "ai-service/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/ai-service/server.js"
    },
    {
      "source": "/((?!api/|assets/).*)",
      "destination": "/index.html"
    }
  ]
}