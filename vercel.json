{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm --filter \"@klinecharts/juglans-app^...\" build",
        "distDir": "packages/juglans-app/dist"
      }
    },
    {
      "src": "ai-service/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "ai-service/package.json",
          "ai-service/prompts/**",
          "ai-service/tools/**",
          "ai-service/commands/**",
          "ai-service/i18n/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/ai-service/server.js"
    },
    {
      "source": "/((?!api/|assets/).*)",
      "destination": "/index.html"
    }
  ]
}