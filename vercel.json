{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm install && pnpm --filter \"@klinecharts/juglans-app^...\" build",
        "distDir": "packages/juglans-app/dist"
      }
    },
    {
      "src": "ai-service/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api-kalshi/(.*)",
      "destination": "https://api.elections.kalshi.com/trade-api/v2/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/ai-service/server.js"
    },
    {
      "source": "/((?!api/|assets/|api-kalshi/).*)",
      "destination": "/index.html"
    }
  ]
}