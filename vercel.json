{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm install && pnpm --filter \"@klinecharts/juglans-app^...\" build",
        "distDir": "packages/juglans-app/dist"
      }
    },
    {
      "src": "ai-service/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server.js", 
        "installCommand": "pnpm install" 
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/ai-service/server.js"
    },
    {
      "source": "/((?!api/|assets/).*)",
      "destination": "/index.html"
    }
  ]
}