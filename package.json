    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "rollup": "^4.16.4",
    "solid-js": "^1.6.11",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitepress": "^1.0.0-alpha.75"
  },
  "dependencies": {
    "@tiptap/core": "^3.8.0",
    "@tiptap/extension-placeholder": "^3.8.0",
    "@tiptap/starter-kit": "^3.8.0",
    "tiptap-solid": "^1.2.1"
